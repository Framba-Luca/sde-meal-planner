# ======================================================
#  SECURITY (Shared by all services)
# ======================================================
# This key is used to Sign and Verify JWT tokens. 
# All services must have the exact same key to talk to each other.
SECRET_KEY=9834898734_super_secret_random_key_change_this_for_production_892374
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ======================================================
#  GOOGLE OAUTH (Required for Authentication Service)
# ======================================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# This must match exactly what you registered in Google Console
GOOGLE_REDIRECT_URI=http://localhost:8001/api/v1/auth/google/callback

# ======================================================
#  DATABASE (PostgreSQL)
# ======================================================
# These are passed to the Postgres Container AND the Database Service
POSTGRES_USER=mealplanner
POSTGRES_PASSWORD=mealplanner
POSTGRES_DB=mealplanner
DB_HOST=postgres
DB_PORT=5432

# ======================================================
#  REDIS (Cache & Sessions)
# ======================================================
REDIS_HOST=redis
REDIS_PORT=6379

# ======================================================
#  FRONTEND
# ======================================================
# Where the browser should redirect after login
FRONTEND_URL=http://localhost:8501